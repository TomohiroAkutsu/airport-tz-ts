{
  "name": "airport-tz-ts",
  "version": "1.0.0",
  "description": "Get airport timezone, offset and location by airport code.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "npm run lint && rm -rf dist && tsc && gulp",
    "format": "eslint --fix --ext .ts . && echo 'format complete.'",
    "lint": "eslint --ext .ts . && echo 'lint complete.'",
    "prepublishOnly": "npm run build",
    "update": "ts-node src/update.ts",
    "test": "jest"
  },
  "keywords": [
    "airport",
    "typescript",
    "timezone",
    "offset"
  ],
  "author": "Tomohiro Akutsu",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.9",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "csv": "^5.3.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.2.1",
    "gulp-uglify-es": "^2.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "node-fetch": "^2.6.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
